@using MasterUserMVC.Models
@model EncryptionModel

<h2>Welcome to User page</h2>

<div class="row">
  <div class="col-md-8">
    <section id="loginForm">
      @using (Html.BeginForm("User", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
        @Html.AntiForgeryToken()
        <h3>Encryption form</h3>
        <hr />
                <div class="form-group">
                  @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
                  <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Message, new { @class = "form-control" ,@Value = "Message to encrypt..."})
                  </div>
                </div>
                <div class="form-group">
                  @Html.LabelFor(m => m.Encrypted, new { @class = "col-md-2 control-label" })
                  <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Encrypted, new { @class = "form-control" })
                  </div>
                </div>

                <div class="form-group">
                  @Html.LabelFor(m => m.Decrypted, new { @class = "col-md-2 control-label" })
                  <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Decrypted, new { @class = "form-control" })
                  </div>
                </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Send" class="btn btn-default" style="display:none"/>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <input type="button" id="btEncrypt" value="Encrypt" class="btn btn-default"/>
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-2 col-md-10">
            <input type="button" id="btDecrypt" value="Decrypt" class="btn btn-default" style="display:none" />
          </div>
        </div>
      }
    </section>
  </div>

</div>




